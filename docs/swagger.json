  "components": {
    "parameters": {
      "IdPathParam": {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": {
          "type": "integer",
          "format": "int64"
        }
      }
    },
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "ok"
          }
        }
      },
      "ProductListResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Product A"
          },
          "price": {
            "type": "number",
            "format": "double",
            "example": 25000.5
          },
          "stock": {
            "type": "integer",
            "format": "int64",
            "example": 100
          }
        }
      },
      "ProductDetailResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Product A"
          },
          "price": {
            "type": "number",
            "format": "double",
            "example": 25000.5
          },
          "stock": {
            "type": "integer",
            "format": "int64",
            "example": 100
          },
          "category": {
            "allOf": [
              {
                "$ref": "#/components/schemas/ProductCategoryResponse"
              }
            ],
            "nullable": true
          }
        }
      },
      "ProductCategoryResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Electronics"
          }
        }
      },
      "CategoryResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Electronics"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "example": "Electronic devices and accessories"
          }
        }
      },
      "CreateProductRequest": {
        "type": "object",
        "required": [
          "category_id",
          "name",
          "price",
          "stock"
        ],
        "properties": {
          "category_id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Product A"
          },
          "price": {
            "type": "number",
            "format": "double",
            "minimum": 0,
            "example": 25000.5
          },
          "stock": {
            "type": "integer",
            "format": "int64",
            "minimum": 0,
            "example": 100
          }
        }
      },
      "UpdateProductRequest": {
        "type": "object",
        "required": [
          "category_id",
          "name",
          "price",
          "stock"
        ],
        "properties": {
          "category_id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          },
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "Optional. Server uses the path ID.",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Product A Updated"
          },
          "price": {
            "type": "number",
            "format": "double",
            "minimum": 0,
            "example": 30000.75
          },
          "stock": {
            "type": "integer",
            "format": "int64",
            "minimum": 0,
            "example": 150
          }
        }
      },
      "CreateCategoryRequest": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "Electronics"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "example": "Electronic devices and accessories"
          }
        }
      },
      "UpdateCategoryRequest": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "Optional. Server uses the path ID.",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Electronics Updated"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "example": "Updated description for electronics"
          }
        }
      },
      "CheckoutRequest": {
        "type": "object",
        "required": [
          "products"
        ],
        "properties": {
          "products": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CheckoutProductRequest"
            }
          }
        }
      },
      "CheckoutProductRequest": {
        "type": "object",
        "required": [
          "product_id",
          "quantity"
        ],
        "properties": {
          "product_id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          },
          "quantity": {
            "type": "integer",
            "format": "int64",
            "minimum": 1,
            "example": 2
          }
        }
      },
      "CheckoutResponse": {
        "type": "object",
        "properties": {
          "transaction_id": {
            "type": "integer",
            "format": "int64",
            "example": 123
          },
          "total_amount": {
            "type": "number",
            "format": "double",
            "example": 45000
          },
          "products": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CheckoutProductDetail"
            }
          }
        }
      },
      "CheckoutProductDetail": {
        "type": "object",
        "properties": {
          "product_id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          },
          "quantity": {
            "type": "integer",
            "format": "int64",
            "example": 2
          },
          "price": {
            "type": "number",
            "format": "double",
            "example": 15000
          }
        }
      },
      "ReportResponse": {
        "type": "object",
        "properties": {
          "total_revenue": {
            "type": "number",
            "format": "double",
            "example": 45000
          },
          "total_transaksi": {
            "type": "integer",
            "format": "int64",
            "example": 5
          },
          "produk_terlaris": {
            "$ref": "#/components/schemas/ReportTopProduct"
          }
        }
      },
      "ReportTopProduct": {
        "type": "object",
        "properties": {
          "nama": {
            "type": "string",
            "example": "Indomie Goreng"
          },
          "qty_terjual": {
            "type": "integer",
            "format": "int64",
            "example": 12
          }
        }
      },
      "MessageResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Operation successful"
          }
        }
      },
      "WebResponseProductListArray": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProductListResponse"
            }
          },
          "meta": {
            "$ref": "#/components/schemas/PaginationResponse"
          }
        }
      },
      "WebResponseProductDetail": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/ProductDetailResponse"
          }
        }
      },
      "WebResponseCategoryResponseArray": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CategoryResponse"
            }
          }
        }
      },
      "WebResponseCategoryResponse": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/CategoryResponse"
          }
        }
      },
      "WebResponseMessage": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/MessageResponse"
          }
        }
      },
      "WebResponseCheckout": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/CheckoutResponse"
          }
        }
      },
      "WebResponseReport": {
        "type": "object",
        "properties": {
          "data": {
            "$ref": "#/components/schemas/ReportResponse"
          }
        }
      },
